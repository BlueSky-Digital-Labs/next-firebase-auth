{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "declaration": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "stripInternal": true,
    "skipDefaultLibCheck": true,
    "baseUrl": "./src",
    "outDir": "./dist"
  },
  "include": ["src/**/*"]
}
